# Provider/API configuration
# Copy this file to .env and fill in your credentials.

# eBay Finding API App ID
EBAY_APP_ID=

# hobbyDB API Key (if you have API access)
HOBBYDB_API_KEY=

# Optional: Facebook logged-in cookie string for Marketplace scraping
# Example (DO NOT SHARE):
# FACEBOOK_COOKIE=c_user=123456789; xs=...; datr=...
FACEBOOK_COOKIE=

# LLM provider for WebSearch (Crawl4AI extraction)
GEMINI_API_KEY=

# Razorpay (existing)
RAZORPAY_KEY_ID=
RAZORPAY_KEY_SECRET=

# ==============================
# Django/Heroku deployment
# ==============================
# IMPORTANT: On Heroku, set these as Config Vars in the app settings.
# Heroku provides DATABASE_URL automatically when you add Heroku Postgres.

# Required
SECRET_KEY=
DEBUG=False
ALLOWED_HOSTS=.herokuapp.com,.modeldiecast.in
CSRF_TRUSTED_ORIGINS=https://*.herokuapp.com,https://www.modeldiecast.in
BASE_URL=https://www.modeldiecast.in
# DATABASE_URL is auto-set by Heroku Postgres add-on
